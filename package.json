{
	"name": "weather-app",
	"version": "1.0.0",
	"description": "Weather app with React, Redux, Node.js, Express and TypeScript",
	"type": "module",
	"main": "dist/server/index.js",
	"author": "Mateusz Wittek",
	"license": "MIT",
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	},
	"scripts": {
		"dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
		"dev:client": "webpack serve --config webpack.client.js --mode development",
		"dev:server": "nodemon --exec \"tsx src/server/index.ts\"",
		"build": "npm run build:client && npm run build:server",
		"build:client": "webpack --config webpack.client.js --mode production",
		"build:server": "webpack --config webpack.server.js --mode production",
		"start": "node dist/server/index.js",
		"test": "NODE_OPTIONS='--loader ts-node/esm' jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src --ext .ts,.tsx",
		"lint:fix": "eslint src --ext .ts,.tsx --fix",
		"typecheck": "tsc --noEmit",
		"prettier": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
		"clean": "rimraf dist"
	},
	"dependencies": {
		"@emotion/react": "^11.13.3",
		"@emotion/server": "^11.11.0",
		"@emotion/styled": "^11.13.0",
		"@reduxjs/toolkit": "^2.3.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"express": "^4.21.1",
		"helmet": "^8.0.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-redux": "^9.1.2",
		"react-router-dom": "^6.28.0",
		"redux": "^5.0.1"
	},
	"devDependencies": {
		"@babel/core": "^7.26.0",
		"@babel/preset-env": "^7.26.0",
		"@babel/preset-react": "^7.25.9",
		"@babel/preset-typescript": "^7.26.0",
		"@emotion/babel-plugin": "^11.12.0",
		"@eslint/js": "^9.15.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.0.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.9.0",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"@typescript-eslint/eslint-plugin": "^8.15.0",
		"@typescript-eslint/parser": "^8.15.0",
		"babel-loader": "^9.2.1",
		"concurrently": "^9.1.0",
		"eslint": "^9.15.0",
		"eslint-plugin-react": "^7.37.2",
		"eslint-plugin-react-hooks": "^5.0.0",
		"html-webpack-plugin": "^5.6.3",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"nodemon": "^3.1.7",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.5",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.15.0",
		"webpack": "^5.96.1",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^5.1.0",
		"webpack-node-externals": "^3.0.0"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead"
	]
}
